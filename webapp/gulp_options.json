{
  "src": {
    "dir": "app",
    "copy": ["app/index.html"],
    "scripts": "app/scripts/**/*.{js,coffee}",
    "styles": "app/styles/index.less",
    "styles_paths": [
      "dist",
      "app/styles"
    ],
    "images": "app/images/**/*.{jpg,png,gif}"
  },
  "dest": {
    "dir": "dist",
    "scripts": "dist/scripts",
    "styles": "dist/styles",
    "images": "dist/images"
  },
  "port": 8080,
  "modules": {
    "amdOptimize": "amd-optimize",
    "rimraf": "rimraf"
  }
}
